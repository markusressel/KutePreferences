<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewModel"
                type="de.markusressel.kutepreferences.preference.bool.BooleanPreferenceViewModel"/>
    </data>

    <LinearLayout
            style="@style/KutePreferences.ListItem"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/kute_preference__preference__icon"
                style="@style/KutePreferences.Preference.Icon"
                android:src="@{viewModel.icon}"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    style="@style/KutePreferences.Preference.Title"
                    android:text="@{viewModel.name}"/>

            <TextView
                    style="@style/KutePreferences.Preference.Description"
                    android:text="@{viewModel.description}"
                    android:visibility="@{viewModel.descriptionVisibility}"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

            <Switch
                    android:layout_width="wrap_content"
                    android:checked="@={viewModel.checked}"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</layout>