<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/KutePreferences.ListItem"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kute_preferences__preference__name"
            style="@style/KutePreferences.Preference.Name"
            android:text="Demo Text Preference" />

        <TextView
            android:id="@+id/kute_preferences__preference__description"
            style="@style/KutePreferences.Preference.Description"
            android:text="Description of Demo Text Preference" />

    </LinearLayout>

</LinearLayout>