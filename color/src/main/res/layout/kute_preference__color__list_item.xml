<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewModel"
                type="de.markusressel.kutepreferences.preference.color.ColorPreferenceViewModel"/>
    </data>

    <LinearLayout
            style="@style/KutePreferences.ListItem"
            android:onClick="@{viewModel.onClick}"
            android:onLongClick="@{viewModel.onLongClick}"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/kute_preference__preference__icon"
                style="@style/KutePreferences.Preference.Icon"
                android:src="@{viewModel.icon}"/>

        <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="vertical">

            <TextView
                    style="@style/KutePreferences.Preference.Title"
                    android:text="@{viewModel.title}"/>

            <TextView
                    style="@style/KutePreferences.Preference.Description"
                    android:text="@{viewModel.description}"
                    android:visibility="@{viewModel.descriptionVisibility}"/>

        </LinearLayout>

        <!-- TODO: change background color based on ViewModel -->
        <View

                android:id="@+id/kute_preferences__preference__color__preview"
                android:layout_margin="16dp"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

    </LinearLayout>

</layout>