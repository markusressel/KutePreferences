<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KutePreferences"/>

    <style name="KutePreferences.ListItem">
        <item name="android:layout_height">@dimen/kute_preferences__preference__item_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="KutePreferences.Category">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KutePreferences.Category.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/kute_preferences__category__item_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="KutePreferences.Category.Icon">
        <item name="android:layout_height">@dimen/kute_preferences__category__icon_size</item>
        <item name="android:layout_width">@dimen/kute_preferences__category__icon_size</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="KutePreferences.Category.Title">
        <item name="android:textSize">@dimen/kute_preferences__category__text_size__title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/kute_preferences__category__title_text_color</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KutePreferences.Category.Description">
        <item name="android:textSize">@dimen/kute_preferences__category__text_size__description
        </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="KutePreferences.Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/kute_preferences__section__background</item>
    </style>

    <style name="KutePreferences.Section.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/kute_preferences__section__text_size__name</item>
        <item name="android:textColor">?attr/kute_preferences__section__text_color</item>
    </style>

    <style name="KutePreferences.Preference">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/kute_preferences__preference__item_height</item>
    </style>

    <style name="KutePreferences.Preference.Icon">
        <item name="android:layout_height">@dimen/kute_preferences__preference__icon_size</item>
        <item name="android:layout_width">@dimen/kute_preferences__preference__icon_size</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="KutePreferences.Preference.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/kute_preferences__preference__text_size__title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="KutePreferences.Preference.Description">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/kute_preferences__preference__text_size__description
        </item>
        <item name="android:maxLines">2</item>
    </style>

</resources>