<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/KutePreferences.ListItem"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/kute_preference__preference__icon"
            style="@style/KutePreferences.Preference.Icon"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/kute_preferences__preference__title"
                style="@style/KutePreferences.Preference.Title"
                android:text="Preference Title"/>

        <TextView
                android:id="@+id/kute_preferences__preference__description"
                style="@style/KutePreferences.Preference.Description"
                android:text="Preference Description"/>

    </LinearLayout>

</LinearLayout>