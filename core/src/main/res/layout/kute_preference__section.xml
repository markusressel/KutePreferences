<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/KutePreferences.Section"
        android:paddingBottom="8dp"
        android:orientation="horizontal">

    <View
            style="@style/KutePreferences.Section.Line.Vertical"
            android:layout_marginTop="18dp"
            android:layout_width="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/kute_preference_section__title"
                style="@style/KutePreferences.Section.Title"
                android:layout_height="36dp"
                android:text="Section"/>

        <LinearLayout
                android:id="@+id/kute_preference_section__item_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>