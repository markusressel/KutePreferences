<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewModel"
                type="de.markusressel.kutepreferences.core.preference.action.ActionViewModel"/>

    </data>

    <LinearLayout
            style="@style/KutePreferences.ListItem"
            android:onClick="@{viewModel.onClick}"
            android:onLongClick="@{viewModel.onLongClick}"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/kute_preference__preference__icon"
                style="@style/KutePreferences.Preference.Icon"
                android:src="@{viewModel.icon}"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/kute_preferences__preference__title"
                    style="@style/KutePreferences.Preference.Title"
                    android:text="@{viewModel.title}"/>

        </LinearLayout>

    </LinearLayout>

</layout>