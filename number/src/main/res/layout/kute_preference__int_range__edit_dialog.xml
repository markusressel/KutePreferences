<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/kute_preferences__preference__range_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_indicator_height="23dp"
        app:rsb_indicator_margin="3dp"
        app:rsb_indicator_padding_left="4dp"
        app:rsb_indicator_padding_right="4dp"
        app:rsb_indicator_padding_top="6dp"
        app:rsb_indicator_show_mode="alwaysShow"
        app:rsb_mode="range"
        app:rsb_progress_color="?android:attr/colorAccent"
        app:rsb_progress_height="2dp"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_margin="15dp" />

</LinearLayout>